{
    "name": "@fp8/gcutils",
    "version": "0.5.0",
    "description": "Google Cloud Helpers",
    "main": "lib/index.js",
    "repository": "https://github.com/fp8/gcutils",
    "author": "marcos.lin@farport.co",
    "license": "MIT",
    "types": "lib/index.d.ts",
    "engines": {
        "node": ">=20"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "yarn lint && yarn build:ts && yarn test:lib && yarn gendoc",
        "build:ts": "tsc --project tsconfig.build.json",
        "gendoc": "OUTPUTDIR=build/docs && mkdir -p $OUTPUTDIR && typedoc --readme none --excludePrivate --tsconfig tsconfig.json --out $OUTPUTDIR src/index.ts",
        "lint:ts": "eslint src --ext .ts,.tsx --fix",
        "lint:format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "yarn lint:ts && yarn lint:format",
        "info:version": "node scripts/packageInfo.js",
        "test:lib": "jest --config ./jest.config.lib.ts",
        "test:unit": "jest --config ./jest.config.ts",
        "test": "yarn test:unit --coverage",
        "utest": "yarn test:unit --runInBand --bail",
        "scripts:subscriber": "ts-node --project tsconfig.json -r tsconfig-paths/register scripts/pubsub/subscriber.ts",
        "scripts:publish": "ts-node --project tsconfig.json -r tsconfig-paths/register scripts/pubsub/publisher.ts",
        "emulator:firestore:up": "gcloud beta emulators firestore start --host-port=127.0.0.1:9901",
        "emulator:firestore:down": "curl -d '' http://127.0.0.1:9901/shutdown",
        "emulator:pubsub:up": "gcloud beta emulators pubsub start --project=$GOOGLE_CLOUD_PROJECT --host-port=127.0.0.1:9902",
        "emulator:pubsub:down": "curl -d '' http://127.0.0.1:9902/shutdown",
        "emulators:up": "stmux -M -e ERROR -m beep,system -- [ \"yarn emulator:firestore:up\" : \"yarn emulator:pubsub:up\" ]",
        "emulators:down": "yarn emulator:firestore:down; yarn emulator:pubsub:down",
        "clean": "rm -rf coverage build lib"
    },
    "devDependencies": {
        "@jest/globals": "^30.0.5",
        "@types/debug": "^4.1.12",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "dotenv": "^17.2.1",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^30.0.5",
        "jest-extended": "^6.0.0",
        "prettier": "^3.5.3",
        "stmux": "^1.8.11",
        "ts-jest": "^29.2.6",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typedoc": "^0.28.1",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "@fp8/simple-config": "^0.7.0",
        "@google-cloud/firestore": "^7.11.0",
        "@google-cloud/pubsub": "^5.2.0",
        "@google-cloud/secret-manager": "^6.0.1",
        "@google-cloud/storage": "^7.15.2",
        "googleapis": "^157.0.0",
        "jlog-facade": "^0.10.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
